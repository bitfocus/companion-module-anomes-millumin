		"lint-staged": "^12.3.2",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"webpack": "^5.76.3",
		"webpack-cli": "^5.0.1"
	},
	"lint-staged": {
		"*.{js,json,md}": [
